{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug-amd64-cargo",
            "type": "shell",
            "command": "mkdir -p ./target/x86_64-unknown-linux-gnu/debug; ./scripts/static-pie.sh x86_64-unknown-linux-gnu C Debug > ./target/x86_64-unknown-linux-gnu/debug/loader.c",
        },
        {
            "label": "build-debug-amd64-loader",
            "type": "shell",
            "command": "gcc ./target/x86_64-unknown-linux-gnu/debug/loader.c -static -o ./target/x86_64-unknown-linux-gnu/debug/loader",
            "dependsOn": ["build-debug-amd64-cargo"],
        },
        {
            "label": "build-debug-amd64-chmod",
            "type": "shell",
            "command": "chmod +x ./target/x86_64-unknown-linux-gnu/debug/loader",
            "dependsOn": ["build-debug-amd64-loader"],
        },
        {
            "label": "build-debug-amd64",
            "dependsOn": ["build-debug-amd64-cargo", "build-debug-amd64-loader", "build-debug-amd64-chmod"],
        },
        {
            "label": "build-debug-i686-cargo",
            "type": "shell",
            "command": "mkdir -p ./target/i686-unknown-linux-gnu/debug; ./scripts/static-pie.sh i686-unknown-linux-gnu C Debug > ./target/i686-unknown-linux-gnu/debug/loader.c",
        },
        {
            "label": "build-debug-i686-loader",
            "type": "shell",
            "command": "gcc ./target/i686-unknown-linux-gnu/debug/loader.c -static -o ./target/i686-unknown-linux-gnu/debug/loader -m32",
            "dependsOn": ["build-debug-i686-cargo"],
        },
        {
            "label": "build-debug-i686-chmod",
            "type": "shell",
            "command": "chmod +x ./target/i686-unknown-linux-gnu/debug/loader",
            "dependsOn": ["build-debug-i686-loader"],
        },
        {
            "label": "build-debug-i686",
            "dependsOn": ["build-debug-i686-cargo", "build-debug-i686-loader", "build-debug-i686-chmod"],
        },
    ],
}