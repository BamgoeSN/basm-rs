    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'basm' (amd64)",
            "args": ["--debug"],
            "preLaunchTask": "build-debug-amd64",
            "program": "${workspaceFolder}/target/x86_64-unknown-linux-gnu/debug/loader",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
            "preRunCommands": [
                "target modules add ${workspaceFolder}/target/x86_64-unknown-linux-gnu/debug/basm",
                "target modules load --file basm --slide 0x20000000",
            ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'basm' (i686)",
            "args": ["--debug"],
            "preLaunchTask": "build-debug-i686",
            "program": "${workspaceFolder}/target/i686-unknown-linux-gnu/debug/loader",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
            "preRunCommands": [
                "target modules add ${workspaceFolder}/target/i686-unknown-linux-gnu/debug/basm",
                "target modules load --file basm --slide 0x20000000",
            ],
        },
    ]
}